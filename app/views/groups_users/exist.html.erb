<h4>List of Users</h1>

<table class ="table table-striped table-bordered table-hover">
  <thead class ="thead-dark">
    <tr>
      <th>Actions</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <!--<th colspan="5"></th>-->
    </tr>
  </thead>

  <tbody class="groupsusersTable">
    <% @group.users.each do |user| %>
      <tr>
        <td>
            <%= link_to 'Delete', user, class:"dropdown-item", method: :delete, data: { confirm: 'Are you sure?'  } %>
        </td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "ADD", group_users_path(@group.id, 6) %>
