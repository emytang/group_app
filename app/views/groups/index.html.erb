<h4>All Groups</h4>

<table class ="table table-striped table-bordered table-hover">
  <thead class ="thead-dark">
    <tr>
      <th>Actions</th>
      <th>Name</th>
      <th>Email</th>
      <th>Description</th>
      <th>Created At</th>
      <th>Updated At</th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        
        <td>
          <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
              A
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
              
              <li><%= link_to 'View', group, class:"dropdown-item" %></li>
             
              <li><%= link_to 'Delete', group, class:"dropdown-item", method: :delete, data: { confirm: 'Are you sure?'  } %></li>
              
    
            </ul>
          </div>
        </td>
        <td><%= group.name %></td>
        <td><%= group.email %></td>
        <td><%= group.description %></td>
        <td><%= group.created_at %></td>
        <td><%= group.updated_at %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render 'form_modal', group: @group %>

