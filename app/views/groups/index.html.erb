<h4>All Groups</h4>

<table class ="table table-striped table-bordered table-hover">
  <thead class ="thead-dark">
    <tr>
      <th>Actions</th>
      <th>Name</th>
      <th>Email</th>
      <th>Description</th>
      <th>Created At</th>
      <th>Updated At</th>
      <!--<th colspan="6"></th>-->
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <!--<td><%= link_to 'Action', class:"dropdown"  %></td>-->
        <td>
          <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
              A
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
              <!--<li><a class="dropdown-item" href="/groups">View</a></li>-->
              <li><%= link_to 'View', group, class:"dropdown-item" %></li>
              <!--<li><a class="dropdown-item" href="#">Delete</a></li>-->
              <li><%= link_to 'Delete', group, class:"dropdown-item", method: :delete, data: { confirm: 'Are you sure?'  } %></li>
              
    
            </ul>
          </div>
        </td>
        <td><%= group.name %></td>
        <td><%= group.email %></td>
        <td><%= group.description %></td>
        <td><%= group.created_at %></td>
        <td><%= group.updated_at %></td>
        <!--<td><%= link_to 'View', group %></td>-->
        <!--<td><%= link_to 'Edit', edit_group_path(group) %></td>-->
        <!--<td><%= link_to 'Delete', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@getbootstrap">Add New Group</button>



<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Group</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render 'form', group: @group %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>

